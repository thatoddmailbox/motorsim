html, body
	box-sizing: border-box
	font-family: "Lato", sans-serif
	width: 100%
	height: 100%
	padding: 0
	margin: 0

.simulation
	display: flex
	flex-direction: row

	#canvasContainer
		position: relative
		width: 800px
		height: 600px

		canvas
			background: black
			display: block

		.pauseOverlay
			display: none
			background: rgba(255, 255, 255, 0.75)
			color: black
			font-size: 2rem
			padding: 1rem 0
			z-index: 2
			width: 100%
			pointer-events: none
			text-align: center

		canvas, .pauseOverlay
			position: absolute
			top: 0
			left: 0

	#controlPanel
		padding: 1rem

		.parameter
			margin-top: 1rem

			.parameterName
				font-weight: bold

.simulation.paused
	#canvasContainer
		.pauseOverlay
			display: block